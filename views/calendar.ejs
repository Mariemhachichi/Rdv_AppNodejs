<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendrier</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FullCalendar CSS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="d-flex" id="wrapper">
    <!-- Sidebar -->
    <div class="bg-dark text-white" id="sidebar" style="width: 250px; height: 100vh;">
      <div class="p-4">
        <h4>Tableau de bord Admin</h4>
        <ul class="list-unstyled mt-4">
          <li><a href="/dashboard/admin" class="text-white text-decoration-none">Accueil</a></li>
          <li><a href="/calendar" class="text-white text-decoration-none">Calendrier</a></li>
        </ul>
      </div>
    </div>

    <!-- Main content area -->
    <div id="page-content-wrapper" style="width: 100%; padding-left: 260px;">
      <!-- Navigation Bar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link active" href="#" id="logoutBtn">Déconnexion</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="container py-5">
        <h1>Calendrier Complet</h1>
        <div id="calendar"></div>
      </main>
    </div>
  </div>

    <!-- Modal pour afficher les détails d'un RDV -->
    <div class="modal" tabindex="-1" id="eventModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Détails du Rendez-vous</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="eventForm">
                        <div class="mb-3">
                            <label for="clientName" class="form-label">Client</label>
                            <input type="text" class="form-control" id="clientName" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="professionalName" class="form-label">Professionnel</label>
                            <input type="text" class="form-control" id="professionalName" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="status" class="form-label">Statut</label>
                            <select class="form-control" id="status">
                                <option value="en attente">En attente</option>
                                <option value="confirmé">Confirmé</option>
                                <option value="annulé">Annulé</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary" id="saveBtn">Valider</button>
                </div>
            </div>
        </div>
    </div>

  <!-- FullCalendar Script -->
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
  <script>
    let currentEventId = null; // Variable pour stocker l'ID du RDV sélectionné

    document.addEventListener('DOMContentLoaded', function () {
        const calendarEl = document.getElementById('calendar');
        const calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: '/Rdvs', // L'API pour récupérer les rendez-vous
            editable: true, // Permet le déplacement des événements
            droppable: true, // Permet de déplacer l'événement
            eventDrop: function (info) {
                const event = info.event;
                const newDate = event.start;

                // Appel à l'API pour mettre à jour la date du RDV
                fetch(`/rdv/${event.id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        date: newDate // Mettre à jour la date avec la nouvelle position
                    })
                }).then(response => {
                    if (response.ok) {
                        alert('Rendez-vous déplacé avec succès');
                    }
                }).catch(err => {
                    alert('Erreur lors du déplacement');
                });
            },
eventClick: function (info) {
    const event = info.event;
    currentEventId = event.id; // Assigne l'ID de l'événement

    console.log("Événement sélectionné:", event); // Vérifie les propriétés de l'événement
    console.log("currentEventId:", currentEventId); // Vérifie que l'ID est correctement défini

    // Remplir les champs avec les informations du RDV
    document.getElementById('clientName').value = event.extendedProps.client;
    document.getElementById('professionalName').value = event.extendedProps.professional;
    document.getElementById('description').value = event.extendedProps.description;
    document.getElementById('status').value = event.extendedProps.status;

    // Afficher le modal
    new bootstrap.Modal(document.getElementById('eventModal')).show();
},

            locale: 'fr',
            eventColor: '#198754',
        });

        calendar.render();
    });

    // Fonction pour valider les modifications
    document.getElementById('saveBtn').addEventListener('click', function () {
      console.log('Le bouton "Valider" a été cliqué');
  
      const updatedDescription = document.getElementById('description').value;
      const updatedStatus = document.getElementById('status').value;
  
      console.log('Nouvelle description:', updatedDescription);
      console.log('Nouveau statut:', updatedStatus);
  
      if (currentEventId) {
          console.log('ID du rendez-vous actuel:', currentEventId);
  
          fetch(`/rdv/${currentEventId}`, {
              method: 'PUT',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                  description: updatedDescription,
                  status: updatedStatus
              })
          })
          .then(response => {
              console.log('Réponse du serveur:', response);
  
              if (response.ok) {
                  alert('Rendez-vous modifié avec succès');
                  location.reload(); // Rafraîchir la page pour recharger les événements
              } else {
                  alert('Erreur lors de la modification du rendez-vous');
              }
          })
          .catch(err => {
              console.log('Erreur lors de la requête fetch:', err);
              alert('Erreur lors de la modification');
          });
      } else {
          console.log('Aucun événement sélectionné');
          alert('Aucun rendez-vous sélectionné');
      }
  });
  
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
